<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">
        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/hr_ask_for_leave_form_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hr_ask_for_leave_form_title" />

        <EditText
            android:id="@+id/hr_ask_for_leave_form_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false" />

        <TextView
            android:id="@+id/hr_ask_for_leave_form_label_leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hr_leave_type" />

        <Spinner
            android:id="@+id/hr_ask_for_leave_form_leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/hr_ask_for_leave_form_label_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hr_ask_for_leave_form_start_time" />


        <EditText
            android:id="@+id/hr_ask_for_leave_form_start_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false" />
        <!--<DatePicker-->
        <!--android:id="@+id/hr_ask_for_leave_form_start_time"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:calendarViewShown="false"-->
        <!--android:datePickerMode="calendar" />-->

        <TextView
            android:id="@+id/hr_ask_for_leave_form_label_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hr_ask_for_leave_form_end_time" />


        <EditText
            android:id="@+id/hr_ask_for_leave_form_end_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false" />

        <TextView
            android:id="@+id/hr_ask_for_leave_form_label_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hr_ask_for_leave_form_reason" />

        <EditText
            android:id="@+id/hr_ask_for_leave_form_reason"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false" />
    </LinearLayout>
</ScrollView>